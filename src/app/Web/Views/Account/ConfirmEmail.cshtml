@{
    ViewData["Title"] = "ConfirmEmail";
}

<div class="container">
    <div class="row text-center">
        <div class="col-md-4">
            @if (ViewBag.Success == true)
            {
                <div class="alert alert-success">
                    <p>Your email has been successfully verified. Login to start</p>
                </div>
            }
            else
            {
                <p>Something went wrong or your token has already expired</p>
            }
        </div>
    </div>
</div>