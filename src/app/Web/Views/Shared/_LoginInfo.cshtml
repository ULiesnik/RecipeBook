@using Microsoft.AspNetCore.Identity
@inject  SignInManager<User> SignInManager 

@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark">Hello @User.Identity?.Name</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-outline-primary" asp-controller="Users" asp-action="MyAccount">My Account</a>
            <a class="btn btn-primary" asp-controller="Account" asp-action="Logout">Logout</a>
        </li>
    </ul>
}
else
{
    <li class="nav-item">
        <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Login">Login</a>
        <a class="btn btn-primary" asp-controller="Account" asp-action="Signup">Sign up</a>
    </li>
}
